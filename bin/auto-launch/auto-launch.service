# see https://askubuntu.com/questions/919054/how-do-i-run-a-single-command-at-startup-using-systemd

[Unit]
Description=Electron application auto-launch on boot.

[Service]
WorkingDirectory=/opt/app
ExecStart=/opt/app/launch
Restart=on-failure
RestartSec=30

[Install]
# see https://unix.stackexchange.com/questions/506347/why-do-most-systemd-examples-contain-wantedby-multi-user-target
WantedBy=multi-user.target

